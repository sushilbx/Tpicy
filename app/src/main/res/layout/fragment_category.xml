<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tpicy.CategoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="260dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pickle"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.circle" />

        <TextView
            android:id="@+id/tvCategoryPickle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pickle"
            android:textAppearance="@style/TextAppearance.BharatPickle.TitleLarge"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCategoryImageChatni"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/chatnies"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.circle" />

        <TextView
            android:id="@+id/tvCategoryChatni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chatni"
            android:textAppearance="@style/TextAppearance.BharatPickle.TitleLarge"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>