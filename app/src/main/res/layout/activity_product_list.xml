<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tpicy.ProductListActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mtProductListBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Pickle Aur Chutney"
        android:background="@color/yellow"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:titleTextAppearance="@style/TextAppearance.BharatPickle.TitleLarge"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProductList"
        android:layout_width="match_parent"
        tools:listitem="@layout/product_row"
        android:layout_height="match_parent"/>


</LinearLayout>